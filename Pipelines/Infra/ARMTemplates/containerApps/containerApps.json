{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "containerAppName": {
            "type": "string",
            "defaultValue": "mycontainerapi"
        },
        "location": {
            "type": "string",
            "defaultValue": "southindia"
        },
        "containerName": {
            "type": "string",
            "defaultValue": "mycontainerapi"
        },
        "containerImage": {
            "type": "string",
            "defaultValue": "venkatachaitanya98/worldclimateapi:v1.2"
        },
        "cpu": {
            "type": "string",
            "defaultValue": "0.5"
        },
        "memory": {
            "type": "string",
            "defaultValue": "1.0Gi"
        },
        "targetPort": {
              "type": "int",
              "defaultValue":8000
        },
        "subscriptionid": {
              "type": "string",
              "defaultValue": "1e6f4790-3272-493d-9a11-2bb97f6fe3b2"
        },
        "resourcegroupOfEnv": {
              "type": "string",
              "defaultValue": "RG-DEV"
        },
        "containerAppEnv": {
              "type": "string",
              "defaultValue": "defaultContainerAppEnv"
        },
        "env":{
            "type":"string",
            "defaultValue":"sandbox"
        }
    },
    "functions": [],
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.App/containerApps",
            "apiVersion": "2024-03-01",
            "name": "[concat(parameters('containerAppName'),'-',parameters('env'))]",
            "location": "[parameters('location')]",
            "properties": {
                "environmentId":"[concat('/subscriptions/',parameters('subscriptionid'),'/resourceGroups/',parameters('resourcegroupOfEnv'),'/providers/Microsoft.App/managedEnvironments/',concat(parameters('containerAppEnv'),'-',parameters('env')))]",
                "configuration": {
                "ingress": {
                    "external": true,
                    "targetPort": "[parameters('targetPort')]"
                  }
                },
                "template": {
                "containers": [
                    {
                    "name": "[concat(parameters('containerName'),'-',parameters('env'))]",
                    "image": "[parameters('containerImage')]",
                    "resources": {
                        "cpu": "[parameters('cpu')]",
                        "memory": "[parameters('memory')]"
                      }
                    }
                  ]
                }
              }
        }
    ],
    "outputs": {}
}