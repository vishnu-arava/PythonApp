{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string",
            "defaultValue": "Mexico Central"
        },
        "skuServerFarmsName": {
            "type": "string",
            "defaultValue": "F1"
        },
        "skuServerFarmsCapacity": {
            "type": "int",
            "defaultValue":1
        },
        "serverFarmsKind":{
            "type": "string",
            "defaultValue": "linux"
        },
        "webAppName": {
            "type": "string",
            "defaultValue": "dk-weatherapp-webapp"
        },
        "webAppLinuxFxVersion": {
            "type": "string",
            "defaultValue": "PYTHON|3.9"
        },
        "webAppMinTlsVersion": {
            "type": "string",
            "defaultValue": "1.2"
        },
        "webAppFtpsState": {
            "type": "string",
            "defaultValue": "FtpsOnly"
        },
        "env": {
            "type": "string",
            "defaultValue": "sandbox"
        }
    },
    "functions": [],
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.Web/serverfarms",
            "apiVersion": "2021-02-01",
            "name": "[concat(parameters('webAppName'),'-asp','-', parameters('env'))]",
            "location": "[parameters('location')]",
            "sku": {
                "name": "[parameters('skuServerFarmsName')]",
                "tier": "Free",
                "capacity": "[parameters('skuServerFarmsCapacity')]"
            },
            "tags": {
                "displayName": "[concat(parameters('webAppName'),'-asp','-',parameters('env'))]"
            },
            "kind": "[parameters('serverFarmsKind')]",
            "properties": {
                "reserved": true
            }
        },
        {
            "type": "Microsoft.Web/sites",
            "apiVersion": "2021-02-01",
            "name": "[concat(parameters('webAppName'), parameters('env'))]",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.Web/serverfarms', concat(parameters('webAppName'),'-asp','-', parameters('env')))]"
            ],
            "properties": {
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', concat(parameters('webAppName'),'-asp','-', parameters('env')))]",
                "siteConfig": {
                    "linuxFxVersion": "[parameters('webAppLinuxFxVersion')]",
                    "minTlsVersion": "[parameters('webAppMinTlsVersion')]",
                    "ftpsState": "[parameters('webAppFtpsState')]"
                },
                "httpsOnly": true
            },
            "identity": {
                "type": "SystemAssigned"
            }
        }
    ],
    "outputs": {}
}