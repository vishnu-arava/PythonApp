{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "env": {
            "type": "string",
            "defaultValue": "test"
        },
        "appServicePlanName": {
            "type": "string",
            "defaultValue": "myappserviceplan"
        },
        "appServiceNames": {
            "type": "string",
            "defaultValue": "myappservice"
        },
        "location": {
            "type": "string",
            "defaultValue": "canadacentral"
        },
        "sku": {
            "type": "string",
            "defaultValue": "F1"
        },
        "linuxFxVersion": {
            "type": "string",
            "defaultValue": "python | 3.9"
        },
        "workspaceName": {
            "type": "string",
            "defaultValue": "vishnu-weather-workspace"
        },
        "AppInsightNames": {
            "type": "string",
            "defaultValue": "vishnu-insight-weather"
        }
    },
    
    "resources": [

    {
        "type": "Microsoft.OperationalInsights/workspaces",
        "apiVersion": "2021-12-01-preview",
        "name": "[parameters('workspaceName')]",
        "location": "[parameters('location')]",
        "properties": {
            "sku": {
            "name": "pergb2018"
            }
            },
            "retentionInDays": 30
    },

    {
        "type": "Microsoft.Insights/components",
        "apiVersion": "2020-02-02",
        "name": "[concat(parameters('AppInsightName'),[copyIndex()].appinsight, parameters('env'))]",
        "location": "[parameters('location')]",
        "depensOn": [
            "[resourceId('Microsoft.OperationalInsights/workspaces'), parameters('workspaceName')]"
        ],
        "kind": "string",
        "etag": "string",
        "properties": {
            "Application_Type": "string",
            "Flow_Type": "Bluefield",
            "ImmediatePurgeDataOn30Days": true,
            "RetentionInDays": 30,
            "WorkspaceResourceId": "[resourceId('Microsoft.OperationalInsights/workspaces'), parameters('workspaceName')]"
        }
        "copy": {
            "name": "insight",
            "count": "[length(parameters('AppInsights'))]"
        }
    },

    {

        "type": "Microsoft.Web/serverfarms",
        "apiVersion": "2021-02-01",
        "name": "[concat(parameters('appServicePlanName'), parameters('env'))]",
        "location": "[parameters('location')]",
        "dependsOn": [
            "[resourceId('Microsoft.Insights/components'), concat(parameters('AppInsightName'), parameters('env'))]"
        ],
        "sku": {
            "name": "[parameters('sku')]",
            "tier": "Free"
        },
        "kind": "linux",
        "properties": {
            "reserved": true
        }
    },
    {
        "type": "Microsoft.Web/sites",
        "apiVersion": "2021-02-01",
        "name": "[concat(parameters('appServiceNames')[copyIndex()].appname, '-', parameters('env'))]",
        "location": "[parameters('location')]",
        
        "properties": {
            "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', concat(parameters('appServicePlanName'), parameters('env')))]",
            "siteConfig": {
                "linuxFxVersion": "[parameters('linuxFxVersion')]",
                "minTlsVersion": "1.2",
                "ftpsState": "FtpsOnly"
            },
            "httpsOnly": true
        },
        "identity": {
            "type": "SystemAssigned"
        }
        "copy": {
            "name": "appsname",
            "count": "[length(parameters('appServiceNames'))]"
        }
    }

    ]
}
