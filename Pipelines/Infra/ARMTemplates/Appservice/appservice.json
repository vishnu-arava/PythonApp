{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "env": {
            "type": "string",
            "defaultValue": "test"
        },
        "workspaceName": {
            "type": "string",
            "defaultValue": "vishnu-weather-workspace"
        },
        "AppInsightNames": {
            "type": "array",
            "defaultValue": [{
                    "appinsight": "vishnu-insight-1"
                }]
        },
        "appServicePlanNames": {
            "type": "array",
            "defaultValue": [{
                    "appserviceplan" : "vishnuserviceplan1"
                }]
        },
        "appServiceNames": {
            "type": "array",
            "defaultValue": [{
                    "appsitename" : "vishnuappservice582"
                }]
        },
        "location": {
            "type": "string",
            "defaultValue": "canadacentral"
        },
        "sku": {
            "type": "string",
            "defaultValue": "F1"
        },
        "linuxFxVersion": {
            "type": "string",
            "defaultValue": "python | 3.10"
        }
    },
    "resources": [
        {
            "type": "Microsoft.OperationalInsights/workspaces",
            "apiVersion": "2021-12-01-preview",
            "name": "[concat(parameters('workspaceName'), '-', parameters('env'))]",
            "location": "[parameters('location')]",
            "properties": {
                "sku": {
                    "name": "pergb2018"
                },
                "retentionInDays": 30
            }
        },
        {
            "type": "Microsoft.Insights/components",
            "apiVersion": "2020-02-02",
            "name": "[concat(parameters('AppInsightNames')[copyIndex()].appinsight, '-', parameters('env'))]",
            "location": "[parameters('location')]",
            "kind": "web",
            "dependsOn": [
                "[resourceId('Microsoft.OperationalInsights/workspaces', concat(parameters('workspaceName'), '-', parameters('env')))]"
            ],
            "properties": {
                "Application_Type": "web",
                "Flow_Type": "Bluefield",
                "ImmediatePurgeDataOn30Days": true,
                "RetentionInDays": 30,
                "WorkspaceResourceId": "[resourceId('Microsoft.OperationalInsights/workspaces', concat(parameters('workspaceName'), '-', parameters('env')))]"
            },
            "copy": {
                "name": "insight",
                "count": "[length(parameters('AppInsightNames'))]"
            }
        },
        {
            "type": "Microsoft.Web/serverfarms",
            "apiVersion": "2021-02-01",
            "name": "[concat(parameters('appServicePlanNames')[copyIndex()].appserviceplan, '-', parameters('env'))]",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.Insights/components', concat(parameters('AppInsightNames')[copyIndex()].appinsight, '-', parameters('env')))]"
            ],
            "tags": {
                "displayName": "[concat(parameters('appServicePlanNames')[copyIndex()].appserviceplan, '-', parameters('env'))]"
            },
            "sku": {
                "name": "[parameters('sku')]",
                "tier": "Free"
            },
            "kind": "linux",
            "properties": {
                "reserved": true
            },
            "copy": {
                "name": "planname",
                "count": "[length(parameters('appServicePlanNames'))]"
            }
        },
        {
            "type": "Microsoft.Web/sites",
            "apiVersion": "2021-02-01",
            "name": "[concat(parameters('appServiceNames')[copyIndex()].appsitename, '-', parameters('env'))]",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.Web/serverfarms', concat(parameters('appServicePlanNames')[copyIndex()].appserviceplan, '-', parameters('env')))]"
            ],
            "properties": {
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', concat(parameters('appServicePlanNames')[copyIndex()].appserviceplan, '-', parameters('env')))]",
                "siteConfig": {
                    "linuxFxVersion": "[parameters('linuxFxVersion')]",
                    "minTlsVersion": "1.2",
                    "ftpsState": "FtpsOnly",
                    "appSettings": [
                        {
                            "name": "APPINSIGHTS_INSTRUMENTATIONKEY",  
                            "value": "[reference(concat('Microsoft.Insights/components/', concat(parameters('AppInsightNames')[copyIndex()].appinsight, '-', parameters('env')))).InstrumentationKey]"
                        },
                        {  
                            "name": "APPLICATIONINSIGHTS_CONNECTION_STRING",  
                            "value": "[reference(concat('Microsoft.Insights/components/', concat(parameters('AppInsightNames')[copyIndex()].appinsight, '-', parameters('env'))), '2015-05-01').ConnectionString]"
                        },
                        {
                            "name": "SCM_DO_BUILD_DURING_DEPLOYMENT",
                            "value": "true"
                        }
                    ],
                    "httpsOnly": true
                }
            },
            "copy": {
                "name": "appsname",
                "count": "[length(parameters('appServiceNames'))]"
            }
        }
    ]
}
