{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "env": {
            "type": "string",
            "defaultValue":"sandbox" 
      },
        "storageAccounts":{
            "type": "array",
            "defaultValue":["weathappstoraccdefault"]
        },
        "skuName": {
            "type": "string",
            "defaultValue":"Standard_LRS"
        },
        "skuTier": {
            "type": "string",
            "defaultvalue": "Standard"
        },
        "kvName": {
            "type": "string",
            "defaultValue":"devopskv"
        },
        "dbSecretName": {
            "type": "string",
            "defaultValue":"DBSecName"
        },
        "dbSecretValue": {
            "type": "securestring",
            "defaultValue": "password"
        },
        "sqlPassword": {
            "type": "string",
            "defaultValue":"SQLPassword"
        },
        "sqlpasswordValue": {
            "type": "securestring",
            "defaultValue": "password123"
        }
        },
    "functions": [],
    "variables": {},
    "resources": [
        {
            "name": "[concat(parameters('storageAccounts')[copyIndex()].stgname,parameters('env'))]",
            "type": "Microsoft.Storage/storageAccounts",
            "apiVersion": "2023-01-01",
            "tags": {
                "displayName": "[concat(parameters('storageAccounts')[copyIndex()].stgname,parameters('env'))]"
            },
            "location": "[resourceGroup().location]",
            "kind": "StorageV2",
            "sku": {
                "name": "[parameters('skuName')]",
                "tier":"[parameters('skuTier')]"
            },
            "copy": {
                "name": "storageList",
                "count": "[length(parameters('storageAccounts'))]"
            },

           "properties": {
            
            "publicNetworkAccess": "Enabled",
            "routingPreference": {
                    "publishMicrosoftEndpoints": true,
                    "publishInternetEndpoints": true,
                    "routingChoice":"MicrosoftRouting"
                 },
            "allowBlobPublicAccess": true      
            
              }
         
      },
        {
        "name": "[concat(parameters('kvName'),parameters('env'))]",
        "type": "Microsoft.KeyVault/vaults",
        "apiVersion": "2023-02-01",
        "location": "[resourceGroup().location]",
        "tags": {
            "displayName": "[concat(parameters('kvName'),parameters('env'))]"
        },
        "properties": {
            "enabledForDeployment": true,
            "enabledForTemplateDeployment": true,
            "enabledForDiskEncryption": true,
            "tenantId": "026b8468-803d-4300-8831-bef5b66f82cf",
            "accessPolicies": [
                {
                    "tenantId": "026b8468-803d-4300-8831-bef5b66f82cf",
                    "objectId": "5b395a6e-89db-4f5d-9644-394f8f44445b",
                    "permissions": {
                        "keys": [
                            "Get"
                        ],
                        "secrets": [
                            "List",
                            "Get",
                            "Set"
                        ]
                    }
                }
            ],
            "sku": {
                "name": "standard",
                "family": "A"
            }
        },
        "resources": [
            {
                "type": "secrets",
                "name": "[parameters('dbSecretName')]",
                "apiVersion": "2016-10-01",
                "dependsOn": [
                    "[resourceId('Microsoft.KeyVault/vaults', concat(parameters('kvName'),parameters('env')))]"
                ],
                "properties": {
                    "value": "[parameters('dbSecretValue')]"
                }
            },
            {
                    "type": "secrets",
                "name": "[parameters('sqlPassword')]",
                "apiVersion": "2016-10-01",
                "dependsOn": [
                    "[resourceId('Microsoft.KeyVault/vaults', concat(parameters('kvName'),parameters('env')))]"
                ],
                "properties": {
                    "value": "[parameters('sqlpasswordValue')]"
                }
            }
            
        ]
     }
        
    ],
    "outputs": {}
}